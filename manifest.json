{
  "manifest_version": 3,
  "name": "Screenshot Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"   // Ensure the extension has storage permission
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"  // In case we need to handle background tasks
  }
}

